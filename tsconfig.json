{
  "compilerOptions": {
    /* ðŸ”¹ Structure & Base */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* ðŸ”¹ Modules & RÃ©solution */
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* ðŸ”¹ Alias d'importation (@/...) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    /* ðŸ”¹ IncrÃ©mentation & Plugins Next.js */
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
